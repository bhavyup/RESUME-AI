{
  "manifest_version": 3,
  "name": "ResumeAI LinkedIn Importer",
  "description": "Import your LinkedIn profile to ResumeAI with one click.",
  "version": "0.2.0",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:3000/*",
    "https://*.vercel.app/*",
    "https://*.ResumeAI.com/*"
  ],
  "action": {
    "default_title": "ResumeAI Import",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon128.png",
      "48": "icons/icon128.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "https://*.vercel.app/*",
        "https://*.ResumeAI.com/*"
      ],
      "js": ["app-bridge.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
